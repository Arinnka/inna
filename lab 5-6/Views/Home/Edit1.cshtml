@model lab_5_6.Models.Order

@{
    ViewBag.Title = "Оплата товара";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Оплата выбранного заказа</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
      
        <h4>Для оплаты перейдите по ссылке</h4>
        <a href="https://online.sberbank.ru/CSAFront/index.do"> Оплата сбербанком</a>
        <hr />
        <h4>Оставьте комментарий подтверждающий оплату</h4>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        
        <div class="form-group">
            @Html.LabelFor(model => model.oplata, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.oplata, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.oplata, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
